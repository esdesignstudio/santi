{% if posts.pagination.pages is not empty %}
    <nav class="m-pagination">
        <ul class="m-pagination__main">
            {# First #}
            {# {% if posts.pagination.pages|first and posts.pagination.pages|first.current != true %}
                <li class="m-pagination__btn -first">
                    <a href="{{ posts.pagination.pages|first.link }}">
                        <Icon name="db-left"></Icon>
                    </a>
                </li>
            {% else %}
                <li class="m-pagination__btn -first -disable">
                    <button disabled>
                        <Icon name="db-left"></Icon>
                    </button>
                </li>
            {% endif %} #}
            {# Previous #}
            {% if posts.pagination.prev %}
                <a class="m-pagination__btn -prev -active" href="{{ posts.pagination.prev.link }}">
                    Pre
                </a>
            {% else %}
                <button class="m-pagination__btn -prev" disabled>
                    Pre
                </button>
            {% endif %}
            {# Pages #}
            {% for page in posts.pagination.pages %}
                {% if page.link %}
                    <li class="m-pagination__link">
                        <a href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a>
                    </li>
                {% else %}
                    <li class="m-pagination__link -active">
                        <span class="{{ page.class }}">{{ page.title }}</span>
                    </li>
                {% endif %}
            {% endfor %}
            {# Next #}
            {% if posts.pagination.next %}
                <a class="m-pagination__btn -next -active" href="{{ posts.pagination.next.link }}">
                    Next
                </a>
            {% else %}
                <button class="m-pagination__btn -next" disabled>
                    Next
                </button>
            {% endif %}
            {# {% if posts.pagination.next %}
                <li class="m-pagination__btn -next">
                    <a href="{{ posts.pagination.next.link }}">
                        <Icon name="right"></Icon>
                    </a>
                </li>
            {% else %}
                <li class="m-pagination__btn -next -disable">
                    <button disabled>
                        <Icon name="right"></Icon>
                    </button>
                </li>
            {% endif %} #}
            {# Last #}
            {# {% if posts.pagination.pages|last and posts.pagination.pages|last.current != true %}
                <li class="m-pagination__btn -last">
                    <a href="{{ posts.pagination.pages|last.link }}">
                        <Icon name="db-right"></Icon>
                    </a>
                </li>
            {% else %}
                <li class="m-pagination__btn -last -disable">
                    <button disabled>
                        <Icon name="db-right"></Icon>
                    </button>
                </li>
            {% endif %} #}
        </ul>
    </nav>
{% endif %}
